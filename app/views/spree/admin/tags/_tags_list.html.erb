<div class="panel panel-default fields">
  <div class="panel-heading">
    <span class="text-muted"> <%= Spree.t(:tags) %> </span>
  </div>
  <div class="panel-body" id="attr_list">
    <% if tags.any? %>
      <ul class="cat-wrap list-group">
        <li class="cat-row list-group-item">
          <% set_locales_array.each do |loc|  %>
            <span class="text-muted"><%= Spree.t(:version) %> - <%= loc %></span>
          <% end %>
          <span class="text-muted"><%= Spree.t(:Actions) %></span>
        </li>
        <% tags.each do |tag| %>
          <li class="cat-row list-group-item">
            <% set_locales_array.each do |loc|  %>
              <div class="cat-item">
                <%= tag.name(locale: loc) %>
              </div>
            <% end %>
            <div class="cat-item">
              <%= link_to "<i class='glyphicon glyphicon-pencil'></i>".html_safe,
                edit_admin_tag_path(tag), class: 'btn btn-sm btn-primary' %>
              <%= link_to "<i class='glyphicon glyphicon-remove'></i>".html_safe, 
                admin_tag_path(tag), method: :delete, class: 'btn btn-sm btn-primary'  %>
          </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <%= Spree.t(:no_tag) %>
    <% end %>
  </div>
</div> 

<article class="post">
  <div class="post-img-wrap col-md-10 col-md-offset-1">
    <%= link_to blog_entry_permalink(@blog_entry) do %>
      <%= image_tag  @blog_entry.blog_entry_image.attachment.url(:original), class: "img-responsive center-block" %>
    <% end %>
  </div>
  <div class="post-img-wrap col-md-8 col-md-offset-2">
    <div class="post-content">
      <div class="post-date"><%= l(@blog_entry.published_at, :format => :blog_date) %></div>
      <h1 class="post-title"><%= @blog_entry.title %></h1>
      <div class="taxonomy-nav">
        <% unless @blog_entry.category_list.empty? %>
          <span><%= Spree.t(:posted_in) %></span> <%= blog_entry_category_list_html @blog_entry %>.
        <% end %>
      </div>
      <div class="taxonomy-nav">
        <% unless @blog_entry.tag_list.empty? %>
          <span><%= Spree.t(:tagged) %></span> <%= blog_entry_tag_list_html @blog_entry %>.
        <% end %>
      </div>
    </div>
    <%== @blog_entry.body %>
  </div>
</article>
